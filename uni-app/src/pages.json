{
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "书架",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/my/my",
      "style": {
        "navigationBarTitleText": "个人中心"
      }
    },    // #ifndef APP-PLUS || MP-WEIXIN || MP-QQ
    {
      "path": "pages/feedback/feedback",
      "style": {
        "navigationBarTitleText": "意见反馈",
        "enablePullDownRefresh": false
      }
    }    // #endif
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "DT阅读",
    "navigationBarBackgroundColor": "#6cc",
    "backgroundColor": "#F8F8F8",
    "maxWidth": 768,
    "rpxCalcMaxDeviceWidth": 768,
    "rpxCalcBaseDeviceWidth": 768
  },
  "tabBar": {
    "color": "#cdcdcd",
    "selectedColor": "#66CCCC",
    "list": [
      // icon https://www.iconfont.cn/collections/detail?spm=a313x.7781069.0.da5a778a4&cid=12910
      {
        "pagePath": "pages/index/index",
        "text": "书架",
        "iconPath": "static/images/tabbar/books.png",
        "selectedIconPath": "static/images/tabbar/booksHL.png"
      },
      {
        "pagePath": "pages/my/my",
        "text": "我",
        "iconPath": "static/images/tabbar/my.png",
        "selectedIconPath": "static/images/tabbar/myHL.png"
      }
    ]
  }
}
